{"name": "Hive Page Capture Extension", "version": "1.0.0.2", "manifest_version": 3, "description": "This extension enables Digital Hive and IBM Analytics Content Hub to capture full-page screenshots of Hive Pages.", "background": {"scripts": ["background.js"]}, "content_scripts": [{"all_frames": false, "js": ["contentscript.js"], "matches": ["http://localhost/*", "https://*/*"], "run_at": "document_end"}], "permissions": ["activeTab"], "host_permissions": ["<all_urls>"], "icons": {"48": "icon_48_active.png", "128": "icon_128.png"}, "action": {"default_icon": "icon_48_inactive.png", "default_title": "Click to capture this Hive"}, "browser_specific_settings": {"gecko": {"id": "hivePageCapture@digitalhive.com", "strict_min_version": "109.0"}}}