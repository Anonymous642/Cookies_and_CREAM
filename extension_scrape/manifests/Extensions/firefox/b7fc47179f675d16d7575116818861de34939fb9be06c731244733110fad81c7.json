{"manifest_version": 2, "name": "Quicknote", "description": "Allows the user to make quick notes by clicking a button and entering text into the resulting popup. The notes are saved in storage.", "version": "2.1", "background": {"scripts": ["background.js"], "persistent": true}, "browser_action": {"default_title": "Click here!", "default_icon": "icon/icon.png", "default_popup": "popup/quicknote.html"}, "icons": {"48": "icon/quicknote-48.png"}, "permissions": ["https://*/*", "http://*/*", "activeTab", "tabs", "geolocation", "storage"], "web_accessible_resources": ["img/*.png"]}